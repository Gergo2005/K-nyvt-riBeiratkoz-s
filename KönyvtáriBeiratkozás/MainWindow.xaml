<Window x:Class="Konyvtar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Könyvtár olvasó regisztráció" Height="450" Width="450">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel>
			<TextBlock Text="Név:"/>
			<TextBox x:Name="tbNev" Width="200"/>

			<TextBlock Text="Életkor:" Margin="0,10,0,0"/>
			<TextBox x:Name="tbEletkor" Width="100"/>

	
	</Grid>
</Window>
